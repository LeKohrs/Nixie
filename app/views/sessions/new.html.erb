<div class="login clearfix">
  <h1>Log in</h1>
  <%= form_tag sessions_path, :method => :post do %>
    <div class="field">
      <p>
        <%= label_tag "email:" %>
        <%= text_field_tag :email %>
      </p>
    </div>
    <div class="field">
      <p>
      <%= label_tag "password:" %>
      <%= password_field_tag :password %>
      </p>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>
</div>