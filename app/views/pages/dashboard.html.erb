<div class="dashboard clearfix">
  
  <div class="exercise goal">
    <div class="title-background clearfix">
      <div class="exercise-icon">
        <img src="assets/bicycle_32x32.png">
      </div>
      <div class="exercise-title titles">
        <h1>EXERCISE</h1>
      </div>
    </div>
    <div class="total-exercise">
      <% if @total %>
        <p>Total minutes of exercise: <span><%= @total.total %></span></p>
      <%else%>
        <p>Total minutes of exercise: <span>0</span></p>
      <% end %>
    </div>
     <%= link_to "Add more exercise time.", :activity, class: 'add_activity' %>
  </div>
  
  <div class="water goal">
    <div class="title-background clearfix">
      <div class="drink-icon">
        <img src="assets/faucet_32x32.png">
      </div>
      <div class="drink-title titles">
        <h1>YOUR GOAL</h1>
      </div>
    </div>
    <div class="drink-goal">
      <% if @totalDrinks %>
        <p>OZ you need to drink today: <span><%= @totalDrinks.water_goal %></span></p>
      <% else %>
        <p>Enter your weight in your Profile to find out how much you should be drinking.</p>
      <% end %>
    </div>
  </div>
  
  <div class="glasses">
    <div class="title-background">
      <div class="glass-title titles">
        <h1>WATER TO DRINK</h1>
      </div>
    </div>
    <div class="clearfix">
      <div class="drinks-to-drink">
        <%if @drinks %>
        <% i = 1 %>
          <% while i <= @drinks %>
            <div class="glass">
              <div class="glass<%= i %>">
                <img src="assets/full_glass.svg">
              </div>
            </div>
            <% i = i + 1 %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="legend clearfix">
      <div class="legend-full-glass clearfix">
        <div class="icon"><img src="assets/full_glass.svg"></div>
        <div class="text"><p> = 8oz. glass of water</p></div>
      </div>
      <div class="legend-empty-glass clearfix">
        <div class="icon"><img src="assets/empty_glass.svg"></div>
        <div class="text"><p> = 8oz. of water you have drunk</p></div>
      </div>
    </div>
  </div>
</div>
